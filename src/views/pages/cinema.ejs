<!DOCTYPE html>
<html lang="en">
<head>
    <% include ../partials/head %>
</head>
<body>

<header>
    <% include ../partials/header %>
</header>

<div class="container">
    <main>
        <div class="my-box">
            <div class="seats busy">Busy </div>
            <div class="seats free">Free </div>
            <div class="seats yours">Yours </div>
        </div>
    <div class="row">
        <div class="col-sm-12 col-md-6">
            <h2 class="text-center"><%= title %></h2>
            <% for(var i=1; i<rows+1; i++) {%>
            <div class="my-box">
                <div class="seats rows"><%= i %> </div>
                <% for(var j=0; j<cinema.length; j++) {%>
                    <% if (cinema[j].row === i) { %>
                        <% if (+cinema[j].user_id === +idUser) { %>
                            <div class="seats <%= obj[cinema[j].status] %> yours"> <%= cinema[j].id %> </div>
                        <% } else  { %>
                            <div class="seats <%= obj[cinema[j].status] %>"> <%= cinema[j].id %> </div>
                        <% } %>
                    <% } %>
                <% } %>
            </div>
            <% } %>
        </div>
    </div>
    </main>
</div>

<footer>
    <% include ../partials/footer %>
</footer>

</body>
</html>