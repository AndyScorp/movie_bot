
<!DOCTYPE html>
<html lang="en">
<head>
    <% include ../partials/head %>
</head>
<body>

<header>
    <% include ../partials/header %>
</header>
<div class="container">
    <main>
        <h1>Movies of <%= year %></h1>
        <div class="row">
            <div class="movies-wrap">
                <% moviesByYear.forEach(function(movie) { %>
                <div class="movie">
                    <div class="movie-fon clearfix">
                        <div class="col-sm-5 col-md-4 pl">
                            <img class="img-responsive" src="<%= movie.url %>" >
                        </div>
                        <div class="col-sm-7 col-md-8 pr">
                            <h2><a href="<%= url %><%= movie.id %>"><%= movie.title %></a>
                                <span class="pull-right"><i class="fa fa-star" aria-hidden="true"></i> <%= movie.popularity %></span>
                            </h2>
                            <p><i class="fa fa-calendar" aria-hidden="true"></i> <%= movie.release_date %></p>
                            <p>
                                <b>Overview</b>: <%= movie.overview %>
                            </p>
                        </div>
                    </div>
                </div>
                <% }); %>

            </div>
        </div>
    </main>
</div>

<footer>
    <% include ../partials/footer %>
</footer>

</body>
</html>